{
  "name": "SSDPClient",
  "version": "1",
  
  "manifest_version": 2,
  
  "icons": {"128": "dart_icon.png"},
  
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "sockets": {
        "udp": {
            "send": ["*:*"],
            "bind": ["*:*"],
            "joinGroup" : ["*:*"]
        },
        "tcp": {
            "connect": "*"
        },
        "tcpServer": {
            "listen": "*"
        }
    }, 
  "permissions": [
  "system.network",
    {"sockets": [
      "tcp-listen",
      "tcp-connect:*:*",
      "udp-send-to", "udp-bind", "udp-multicast-membership"]}
  ]
}
